# FeedReader Configuration Example
# Copy this file to config.yaml and customize

database:
  # Path to SQLite database file
  path: ./feedreader.db

ollama:
  # Ollama API base URL
  base_url: http://localhost:11434

  # Security model - use Gemma 2 for content safety screening
  security_model: gemma2

  # Curation model - use Llama 3.2 for neutral interest scoring
  curation_model: llama3.2

majordomo:
  # Enable formatted notification output (for future Majordomo integration)
  enabled: true

  # Command to execute for sending messages (reserved for future use)
  # When 'majordomo chat' CLI command is implemented, this will be used
  chat_command: majordomo

  # Target persona to receive notifications
  target_persona: jarvis

thresholds:
  # Minimum interest score (0-10) to trigger notification
  interest_score: 8

  # Minimum security score (0-10) to consider article safe
  security_score: 7

preferences:
  # Keywords that indicate interesting topics
  keywords:
    - technology
    - security
    - AI
    - programming

  # Preferred news sources (URLs)
  preferred_sources: []

# Optional: Override default AI prompts (system-wide)
# Leave empty to use embedded defaults
# Prompts use Go template syntax with variables like {{.Title}}, {{.Content}}, etc.
prompts:
  # security: |
  #   Your custom security analysis prompt here...
  #   Available vars: {{.Title}}, {{.Content}}

  # curation: |
  #   Your custom curation prompt here...
  #   Available vars: {{.Title}}, {{.Content}}, {{.Keywords}}

  # summarization: |
  #   Your custom summarization prompt here...
  #   Available vars: {{.Title}}, {{.Content}}

  # group_summary: |
  #   Your custom group summary prompt here...
  #   Available vars: {{.Topic}}, {{.Articles}}

  # related_groups: |
  #   Your custom related groups prompt here...
  #   Available vars: {{.Title}}, {{.Summary}}, {{.Groups}}

# Optional: Override default AI temperatures (system-wide)
# Values between 0.0 (deterministic) and 1.0 (creative)
temperatures:
  security: 0.3       # Conservative for security checks
  curation: 0.5       # Balanced for interest scoring
  summarization: 0.3  # Focused for summaries
  group_summary: 0.5  # Creative for narratives
  related_groups: 0.3 # Precise for group matching
