#!/usr/bin/env bash
set -euo pipefail

echo "pre-push: running checks..."

echo "→ go test -race ./..."
go test -race ./...

echo "→ go vet ./..."
go vet ./...

echo "→ golangci-lint run ./..."
golangci-lint run ./...

echo "→ govulncheck ./..."
govulncheck ./... || true

echo "pre-push: all checks passed."
